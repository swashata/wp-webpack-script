		"@types/gradient-string": "^1.1.0",
		"@types/inquirer": "^6.5.0",
		"@types/update-notifier": "^4.1.0",
		"@types/webpack": "^4.41.7",
		"@types/webpack-assets-manifest": "^3.0.0",
